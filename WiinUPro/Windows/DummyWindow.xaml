                <Label Content="L" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top"/>
                <Label Content="R" HorizontalAlignment="Left" Margin="10,154,0,0" VerticalAlignment="Top"/>
            </Grid>
